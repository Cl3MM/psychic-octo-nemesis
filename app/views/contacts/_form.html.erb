<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :firstname %>
  <%= f.input :surname %>
  <%= f.input :nickname %>
  <%= f.input :email %>
  <%= f.input :is_active %>
  <%= f.input :telephone %>
  <%= f.input :address %>
  <%= f.input :postal_code %>
  <%= f.input :country_id %>
  <%= f.input :is_ceres_member %>
  <%= f.input :infos %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contacts_path, :class => 'btn' %>
  </div>
<% end %>
